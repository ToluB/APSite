<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "WhizAP", root_path, id: "logo" %>

      <nav>
				<form class="navbar-search" action="/convos" method="get">
					<input type="text" name="search" class="span2" placeholder="Search WhizAP">
					</form>
        <ul class="nav pull-right">
	
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							Forums
							<b class="caret"> </b>
						</a>
							<ul class="dropdown-menu">
								<li><a href="#">Math and Science</a> | <a href="#">Social Science</a> | <a href="#">History and Religion</a> | Language   </li>
							</ul>
						</li>
						
					<% if user_signed_in? %>	
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<%= current_user.email %>
							<b class="caret"> </b>
						</a>
							<ul class="dropdown-menu">
								<li><a href="#"><i class="icon-user"></i>Profile</a></li>
								<li><a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow"><i class="icon-remove"></i>Sign Out</a></li>
							</ul>
						</li>
						<% else %>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
								Sign In
								<b class="caret"> </b>
							</a>
								<ul class="dropdown-menu">
								<li><%= link_to "Sign In - Facebook", user_omniauth_authorize_path(:facebook) %></li>
								<li><%= link_to "Sign In - Email", new_user_session_path %></li>
								<li><%= link_to "Register", new_user_registration_path %></li>
								</ul>
							</li>
						<% end %>
  
        </ul>
      </nav>
    </div>
  </div>
</header>