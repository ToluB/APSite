Upload your picture:

<%= form_for @user, :html => {:multipart => true} do |f| %>
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
	<% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.label :remote_avatar_url, "or image URL" %><br />
    <%= f.text_field :remote_avatar_url %>
  </p>

	<p>
		<lable>
		<%= f.check_box :remove_avatar%>
		Remove picture
		</label>
  <p><%= f.submit %></p>
<% end %>
