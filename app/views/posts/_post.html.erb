 <div class="post" data-post-id="<%= post.id %>">
	
	<!-- add alternate images for mouseover -->
	<span class = "upmerit" >
		<%= image_tag "thumbsup.jpeg", :size => '20x20', :alt => "Give credit" %>
		</span>
	<span class = "demerit" >
			<%= image_tag "thumbsdown.jpeg", :size => '20x20', :alt => "Demerit"%>
		</span>
		
	<span class = "merits">
	    <%= post.merits %>
	</span>
	
	<span class="content">
	<%= post.title %><br>
  <%= post.content %><br>

	</span>
</div>