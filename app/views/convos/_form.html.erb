<%= form_for(@convo) do |f| %>
  <% if @convo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@convo.errors.count, "error") %> prohibited this convo from being saved:</h2>

      <ul>
      <% @convo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<% if user_signed_in?
		user_id = current_user.id %>
	<%=f.hidden_field :user_id %>
	<% end %>
	
<!-- Should users choose the subject, prepopped with current subject? -->
	<div class="field">
	<%= f.label :subject_id %><br />
	<% if @subject%>
	<%= f.collection_select :subject_id, Subject.all, :id,:name, :prompt => @subject.name %>
	<% else %>
	<%= f.collection_select :subject_id, Subject.all, :id,:name, :prompt => "Choose a subject" %>
	<% end %>
	
	</div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

	<% if current_user.admin %>
		Admin: make conversation appear at top of (all) index pages.  This is for key information and alerts.    Please remember to unstick the conversation (edit conversation and uncheck box) once it is no longer relevant <br/>
		<%=f.check_box :sticky %>
	<% end %>

<% end %>
