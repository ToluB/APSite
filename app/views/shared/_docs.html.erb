<section class= "docs">
	Attached Documents:
	<% item.docs.each do|doc|%>
	<!-- If doc is an image, return thumbnail (not full) version... -->
		<%=link_to (image_tag doc.attachment_url, :class => 'doc_image'), doc.attachment_url %>
		<%= link_to doc.name, doc.attachment_url, :class =>'doc_name' %><br />
		<span class="description"> 
		<%= doc.description %>
		</span>
		<% if signed_in? %>
				<% if current_user == doc.user || current_user.admin? %>
				<%=link_to "Edit", edit_doc_url(doc.id) %> | <%=link_to "Delete", doc_url(doc.id), method: :delete %>
				<% end %>
		<% end %>
		<hr>
				
	<% end%>
	
	  <% if signed_in? %>
				<% if current_user == item.user || current_user.admin %>
					<%= link_to "Upload document", new_convo_doc_url(item.id) %>
					<% end %>
		<% end %>

</section>